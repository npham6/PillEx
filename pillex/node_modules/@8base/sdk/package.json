{
  "name": "@8base/sdk",
  "version": "0.0.72",
  "description": "JavaScript SDK for working with files at 8base",
  "main": "./lib/src/index.js",
  "typings": "./lib/src/index.d.ts",
  "scripts": {
    "test": "jest --no-cache --coverage",
    "build": "tsc",
    "start": "npm run build -- --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json --type-check",
    "upload": "npm version patch && git push --follow-tags",
    "preversion": "npm run tslint",
    "check": "npm-run-all tslint test"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "clearMocks": true
  },
  "author": "8base",
  "license": "MIT",
  "dependencies": {
    "@8base/error-codes": "^1.0.6",
    "apollo-link": "^1.2.1",
    "aws-iot-device-sdk": "^2.2.1",
    "aws-sdk": "^2.336.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.10.0",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^11.12.0",
    "lodash": "^4.17.10",
    "mqtt": "^2.18.5",
    "npm-run-all": "^4.1.3",
    "pluralize": "^7.0.0",
    "sha256": "^0.2.0",
    "typed-graphql": "^1.0.2",
    "zen-observable": "^0.6.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.44",
    "@types/aws-iot-device-sdk": "^2.1.1",
    "@types/graphql": "^0.12.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^8.10.36",
    "@types/pluralize": "0.0.28",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^3.2.0",
    "@types/zen-observable": "0.5.3",
    "awesome-typescript-loader": "^3.2.3",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/8base-shared/sdk.git"
  },
  "bugs": {
    "url": "https://gitlab.com/8base-shared/sdk/issues"
  },
  "homepage": "https://gitlab.com/8base-shared/sdk#README"
}
